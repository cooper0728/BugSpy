@model IEnumerable<BugTracker.Models.History>

@{
    ViewBag.Title = "Index";
}

<h2>Ticket History</h2>

<table class="table table-striped table-bordered table-hover" id="ticketIndexTable">
    <tr>
        <th>
            Author
        </th>
        <th>
            Changes
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ticket.Created)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ticket.Author.FirstName)
                @Html.DisplayFor(modelItem => item.Ticket.Author.LastName)

            </td>
            <td>
                @Html.Raw(item.Body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ticket.Created)

            </td>
            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>*@
        </tr>
    }

</table>


