             <div class="row">
                 <div class="col-lg-12">
                     <h1 class="page-header">BugSpy <img src="~/Img/bugstopper.png" /></h1>
                     
                 </div>
                 @*@RenderBody()*@
             </div>

             @RenderBody()
         </div>
         <!-- /#page-wrapper 
     </div>
     <!-- /#wrapper -->
     <!-- jQuery -->
