             <div class="navbar-header">
                 <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                     <span class="sr-only">Toggle navigation</span>
                     <span class="icon-bar"></span>
                     <span class="icon-bar"></span>
                     <span class="icon-bar"></span>
                 </button>
                 @Html.ActionLink("BugSpy", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
             </div>


             <div class="navbar-default sidebar" role="navigation" width="100px">
                 <div class="sidebar-nav navbar-collapse">
                     <ul class="nav" id="side-menu">
                         <!-- /input-group -->
                         @*</li>*@
                         <li>
                             @if (User.IsInRole("Admin"))
                             {
                                <a href="@Url.Action("UserDashboard", "AdminUser")"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
                             }
                             
                         </li>
                         <li>
                             <a href="@Url.Action("Index", "Projects")"><i class="fa fa-bar-chart-o fa-fw"></i> Projects</a>
                         </li>
                         <li>
                             <a href="@Url.Action("Index", "Tickets")"><i class="fa fa-table fa-fw"></i> Tickets</a>
                         </li>
                         <li>
                             <a href="@Url.Action("Index", "Home")"><i class="fa fa-edit fa-fw"></i> Home</a>
                         </li>

                         <li>@Html.Partial("_LoginPartial")</li>
                     </ul>
                 </div>
